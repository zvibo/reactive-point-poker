.deck
	display flex
	flex-wrap wrap
	justify-content center

	.card
		width 4rem
		flex-grow 0

		input
			display none

		label
			display block
			width 96%
			height 96%
			background-color #48f
			color #fff
			user-select: none
			font-weight bold
			font-size 1.75rem
			line-height 2
			text-align center
			border-radius 2%
			border 0.2rem solid #fff
			box-shadow 0 0.05vw 0.35vw 0.05vw rgba(0,0,0,0.25)

		input:checked + label
			background-color #f84
